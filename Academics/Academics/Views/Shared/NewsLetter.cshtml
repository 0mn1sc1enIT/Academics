<div class="site-section ftco-subscribe-1" style="background-image: url('images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <h2>@localizer["subscribe"]</h2>
                <p>@localizer["far"]</p>
            </div>
            <div class="col-lg-5">
                <form asp-controller="Contact" asp-action="NewsLetterSignUp" method="post" class="d-flex">
                    <input type="email" name="email" class="rounded form-control mr-2 py-3" placeholder="@localizer["email"]">
                    <button class="btn btn-primary rounded py-3 px-4" type="submit">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>