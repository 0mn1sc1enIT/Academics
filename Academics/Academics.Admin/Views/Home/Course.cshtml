@model List<Course>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Teacher</th>
            <th>Course Title</th>
            <th>Category</th>
            <th>Hours</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stars</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Course course in Model)
        {
            <tr>
                <td>@course.Id</td>
                <td>@course.Teacher?.FullName</td> 
                <td>@course.CourseTitle</td>
				<td>@course.Category</td>
                <td>@course.Hours</td>
                <td>@course.Description</td>
                <td>@course.Price.ToString("C")</td>
                <td>@course.Stars</td>
                <td>
                    <a href="@Url.Action("EditCourse", "Home", new { id = course.Id })">edit</a>
                    /
                    <a href="@Url.Action("DeleteCourse", "Home", new { id = course.Id })">delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<hr />
<a href="@Url.Action("EditCourse", "Home")" class="btn btn-default">Add Course</a>
