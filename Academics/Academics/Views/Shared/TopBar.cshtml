@inject IViewLocalizer localizer

<div class="py-2 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-9 d-none d-lg-block">
                <a href="#" class="small mr-3"><span class="icon-question-circle-o mr-2"></span> @localizer["question"]</a>
                <a href="#" class="small mr-3"><span class="icon-phone2 mr-2"></span> 10 20 123 456</a>
                <a href="#" class="small mr-3"><span class="icon-envelope-o mr-2"></span> info@mydomain.com</a>
                @Html.Partial("_lang")
            </div>
            <div class="col-lg-3 text-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Account" asp-action="Logout" class="small mr-3">
                        <span class="icon-sign-out-alt"></span>
                        @localizer["logout"]
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="small mr-3">
                        <span class="icon-unlock-alt"></span>
                        @localizer["login"]
                    </a>
                    <a asp-controller="Account" asp-action="Register" class="small btn btn-primary px-4 py-2 rounded-0">
                        <span class="icon-users"></span>
                        @localizer["register"]
                    </a>
                }
            </div>
        </div>
    </div>
</div>