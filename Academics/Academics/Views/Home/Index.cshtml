@model List<MainSlide>
@{
    ViewData["Title"] = localizer["home"].Value;
    ViewData["Description"] = "Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.";
    ViewData["Keywords"] = "lorem, ipsum, dolor, sit, amet";

    ViewData["FirstPage"] = localizer["home"].Value;
    ViewData["FirstPageAction"] = "Index";
    ViewData["FirstPageController"] = "Home";
    Layout = "_LayoutBasePage";
}
<div class="hero-slide owl-carousel site-blocks-cover">
    @foreach (var slide in Model)
    {
        <div class="intro-section" style="background-image: url('@slide.BackgroundImage');">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12 mx-auto text-center" data-aos="fade-up">
                        <h1>@slide.Title</h1>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div class="text-center">
    <h1 class="display-4">@localizer["welcome"]</h1>
    <p>@localizer["learn"] <a href="https://learn.microsoft.com/aspnet/core">@localizer["building"]</a>.</p>
</div>

@Html.Partial("NewsLetter")