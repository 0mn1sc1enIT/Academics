<header class="site-navbar py-4 js-sticky-header site-navbar-target" role="banner">
    <div class="container">
        <div class="d-flex align-items-center">
            <div class="site-logo">
                <a href="@Url.Action("Index", "Home")" class="d-block">
                    <img src="@Url.Content("~/images/logo.jpg")" alt="Image" class="img-fluid">
                </a>
            </div>
            <div class="mr-auto">
                <nav class="site-navigation position-relative text-right" role="navigation">
                    <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                        <li class="@Html.IsActive("Home")">
                            <a asp-controller="Home" asp-action="Index" class="nav-link text-left">@localizer["home"]</a>
                        </li>
                        <li class="@Html.IsActive("About")">
                            <a asp-controller="About" asp-action="Index" class="nav-link text-left">@localizer["about"]</a>
                        </li>
                        <li class="@Html.IsActive("Admissions")">
                            <a asp-controller="Admissions" asp-action="Index" class="nav-link text-left">@localizer["admissions"]</a>
                        </li>
                        <li class="@Html.IsActive("Courses")">
                            <a asp-controller="Courses" asp-action="Index" class="nav-link text-left">@localizer["courses"]</a>
                        </li>
                        <li class="@Html.IsActive("Contact")">
                            <a asp-controller="Contact" asp-action="Index" class="nav-link text-left">@localizer["contact"]</a>
                        </li>
                    </ul>
                </nav>
            </div>
            <div class="ml-auto">
                <div class="social-wrap">
                    <a href="https://www.facebook.com/"><span class="icon-facebook"></span></a>
                    <a href="https://twitter.com/"><span class="icon-twitter"></span></a>
                    <a href="https://www.linkedin.com/"><span class="icon-linkedin"></span></a>
                    <a href="#" class="d-inline-block d-lg-none site-menu-toggle js-menu-toggle text-black">
                        <span class="icon-menu h3"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>